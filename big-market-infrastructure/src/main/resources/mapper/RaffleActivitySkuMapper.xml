<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.uta.infrastructure.persistent.dao.RaffleActivitySkuMapper">

    <resultMap id="BaseResultMap" type="com.uta.infrastructure.persistent.po.RaffleActivitySku">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="sku" column="sku" jdbcType="BIGINT"/>
            <result property="activityId" column="activity_id" jdbcType="BIGINT"/>
            <result property="activityCountId" column="activity_count_id" jdbcType="BIGINT"/>
            <result property="stockCount" column="stock_count" jdbcType="INTEGER"/>
            <result property="stockCountSurplus" column="stock_count_surplus" jdbcType="INTEGER"/>
            <result property="productAmount" column="product_amount" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,sku,activity_id,
        activity_count_id,stock_count,stock_count_surplus,product_amount,
        create_time,update_time
    </sql>

    <update id="updateActivitySkuStock" parameterType="java.lang.Long">
        update raffle_activity_sku
        set stock_count_surplus = stock_count_surplus - 1, update_time = now()
        where sku = #{sku} and stock_count_surplus > 0
    </update>

    <update id="clearActivitySkuStock" parameterType="java.lang.Long">
        update raffle_activity_sku
        set stock_count_surplus = 0, update_time = now()
        where sku = #{sku}
    </update>

    <select id="queryActivitySku" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select sku, activity_id, activity_count_id, stock_count, stock_count_surplus, product_amount
        from raffle_activity_sku
        where sku = #{sku}
    </select>
    <select id="queryActivitySkuListByActivityId"
            resultType="com.uta.infrastructure.persistent.po.RaffleActivitySku">
        select * from raffle_activity_sku where activity_id = #{activityId}
    </select>


</mapper>
